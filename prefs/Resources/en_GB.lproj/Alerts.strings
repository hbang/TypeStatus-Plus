<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Title. -->
	<key>ALERTS</key>
	<string>Alerts</string>

	<!-- Header for alert type selection. -->
	<key>ALERT_TYPE</key>
	<string>Alert Type</string>

	<!-- Buttons shown in the segmented controls for the alert type. -->
	<key>OFF</key>
	<string>Off</string>
	<key>ALERT_TYPE_ICON</key>
	<string>Icon Only</string>
	<key>ALERT_TYPE_OVERLAY</key>
	<string>Status Bar</string>

	<!-- Explanation of the alert type setting. -->
	<key>ALERT_TYPE_EXPLANATION</key>
	<string>Applies only to notifications from TypeStatus Plus providers.</string>

	<!-- Switch to toggle showing alerts in foreground. -->
	<key>SHOW_IN_FOREGROUND</key>
	<string>Show in Foreground</string>

	<!-- Explanation of the show in foreground switch. -->
	<key>SHOW_IN_FOREGROUND_EXPLANATION</key>
	<string>Display notifications even if the sending app is in the foreground.</string>

	<!-- Switch to wake the screen when the device is locked. -->
	<key>WAKE_WHEN_LOCKED</key>
	<string>Wake When Locked</string>

	<!-- Explanation of the above setting. -->
	<key>WAKE_WHEN_LOCKED_EXPLANATION</key>
	<string>Wake the screen when receiving a TypeStatus notification while the device is locked.</string>

	<!-- Header for tap action section. -->
	<key>TAP_TO_OPEN_ACTION</key>
	<string>Tap Action</string>

	<!-- Options shown for the tap action. -->
	<key>TAP_TO_OPEN_ACTION_OPEN</key>
	<string>Open App</string>
	<key>TAP_TO_OPEN_ACTION_DISMISS</key>
	<string>Dismiss Alert</string>

	<!-- Header for vibration options. -->
	<key>VIBRATIONS</key>
	<string>Vibrations</string>

	<!-- Header for notification center options. -->
	<key>NOTIFICATION_CENTER</key>
	<string>Notification Centre</string>

	<!-- Note displayed below the notification center section. -->
	<key>NOTIFICATION_CENTER_EXPLANATION</key>
	<string>Notification Centre alerts override standard TypeStatus alerts.</string>

	<!-- Option to show banners on the lock screen. -->
	<key>ON_LOCK_SCREEN</key>
	<string>On Lock Screen</string>

	<!-- Option to show banners on the home screen. -->
	<key>ON_HOME_SCREEN</key>
	<string>On Home Screen</string>

	<!-- Option to show banners in apps. -->
	<key>IN_APPS</key>
	<string>In Apps</string>

	<!-- Label for the options on the icon to use in notifications. -->
	<key>ICON</key>
	<string>Icon</string>

	<!-- Option to use the respective app icon. -->
	<key>APP_ICON</key>
	<string>App Icon</string>

	<!-- Explanation of the above options. -->
	<key>ICON_EXPLANATION</key>
	<string>Use the TypeStatus Plus icon on notifications, or the icon for the respective app.</string>

	<!-- Label for the options on keeping notifications in the notification center. -->
	<key>KEEP_BULLETINS</key>
	<string>Keep</string>

	<!-- Option to keep only one alert. -->
	<key>KEEP_BULLETINS_ONE</key>
	<string>One Alert</string>

	<!-- Option to keep all alerts (until the respective app is opened). -->
	<key>KEEP_BULLETINS_ALL</key>
	<string>All Alerts</string>

	<!-- Option to keep all alerts (even if the respective app is opened). -->
	<key>KEEP_BULLETINS_FOREVER</key>
	<string>All Alerts, Forever</string>

	<!-- Explanation of the above options. -->
	<key>KEEP_BULLETINS_EXPLANATION</key>
	<string>Keep only one TypeStatus alert in the Notification Centre, keep all until the respective app is opened, or keep all until you clear them manually.</string>

	<!-- Button to test the alerts. -->
	<key>TEST_ALERT</key>
	<string>Test Alert</string>
</dict>
</plist>
